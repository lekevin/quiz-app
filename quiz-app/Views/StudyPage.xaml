<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="quiz_app.Views.StudyPage"
          Title="Study" 
          BackgroundColor="#554971">
    <StackLayout BackgroundColor="#554971"
              HorizontalOptions="CenterAndExpand"
              VerticalOptions="CenterAndExpand"
              Padding="20">
        <Border StrokeShape="RoundRectangle 30">
            <Border.Shadow>
                <Shadow  Brush="Black"
                         Offset="10, 10"
                         Opacity=".25"/>
            </Border.Shadow>
            <Label   Text="How much wood could a woodchuck chuck if a woodchuck could chuck wood?"
                     HorizontalTextAlignment="Center"
                     VerticalTextAlignment="Center"
                     FontSize="30"
                     Padding="70"
                     TextColor="Black"
                     FontFamily="Helvetica"
                     BackgroundColor="Lavender"
                     WidthRequest="1000"
                     HeightRequest="550"
                     LineBreakMode='WordWrap'>
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCardTapped" />
                </Label.GestureRecognizers>
            </Label>
        </Border>
    </StackLayout>
</ContentPage>